@model MdpProject.Models.MdpUser
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<div class="container my-4">
    <h2 class="mb-4"><i class="bi bi-person-badge"></i> Profile</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <!-- Avatar + Upload -->
        <div class="col-md-4 text-center">
            <div class="card p-3 shadow-sm">
                <img src="@(!string.IsNullOrEmpty(Model.MdpAvatar) ? Model.MdpAvatar : "https://via.placeholder.com/150")"
                     alt="Avatar"
                     class="rounded-circle mx-auto mb-3"
                     style="width:150px;height:150px;object-fit:cover;" />

                <h4>@Model.MdpHoTen</h4>
                <p class="text-muted">@Model.MdpEmail</p>

                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="MdpUserId" value="@Model.MdpUserId" />
                    <div class="mb-2">
                        <input type="file" name="avatarFile" class="form-control form-control-sm" />
                    </div>
                    <div class="mb-2">
                        <input type="text" name="MdpAvatar" value="@Model.MdpAvatar" class="form-control form-control-sm" placeholder="Hoặc nhập link ảnh" />
                    </div>
                    <button type="submit" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-upload"></i> Thay đổi Avatar
                    </button>
                </form>
            </div>
        </div>

        <!-- Thông tin chi tiết -->
        <div class="col-md-8">
            <div class="card p-4 shadow-sm">
                <h5 class="mb-3"><i class="bi bi-pencil-square"></i> Thông tin chi tiết</h5>

                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="MdpUserId" value="@Model.MdpUserId" />
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Họ tên</label>
                            <input type="text" name="MdpHoTen" value="@Model.MdpHoTen" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Tên đăng nhập</label>
                            <input type="text" value="@Model.MdpTenDangNhap" class="form-control" readonly />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Email</label>
                            <input type="email" name="MdpEmail" value="@Model.MdpEmail" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Số điện thoại</label>
                            <input type="text" name="MdpSoDienThoai" value="@Model.MdpSoDienThoai" class="form-control" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Giới tính</label>
                            <select name="MdpGioiTinh" asp-items="ViewBag.GioiTinhList" class="form-select"></select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Ngày sinh</label>
                            <input type="date" name="MdpNgaySinh" value="@(Model.MdpNgaySinh?.ToString("yyyy-MM-dd"))" class="form-control" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Địa chỉ</label>
                        <textarea name="MdpDiaChi" class="form-control" rows="2">@Model.MdpDiaChi</textarea>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            Tạo lúc: @(Model.MdpCreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "-") |
                            Cập nhật: @(Model.MdpUpdatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "-")
                        </small>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-save"></i> Lưu thay đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
