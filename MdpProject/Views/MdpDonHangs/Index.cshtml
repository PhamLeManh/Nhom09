@model IEnumerable<MdpProject.Models.MdpDonHang>
@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<h2>Đơn hàng của tôi</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Bạn chưa có đơn hàng nào.
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Mã đơn</th>
                <th>Ngày đặt</th>
                <th>Trạng thái</th>
                <th>Tổng tiền</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MdpDonHangId</td>
                    <td>@item.MdpNgayDatDonHang?.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.MdpTrangThaiThanhToan)
                       && item.MdpTrangThaiThanhToan.ToLower() == "true")
                        {
                            <span class="badge bg-success">Đã thanh toán</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Chưa thanh toán</span>
                        }



                    </td>
                    <td>@item.MdpTongTien.ToString("N0") ₫</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.MdpDonHangId" class="btn btn-sm btn-info">
                            Xem
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
