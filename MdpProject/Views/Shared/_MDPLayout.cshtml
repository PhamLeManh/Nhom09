@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = ViewData["Title"] ?? "MDP Tech";

    // Lấy thông tin user từ session
    var username = Context.Session.GetString("username");
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MDP Tech</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }

        .nav-link {
            font-weight: 500;
            transition: color 0.3s;
        }

            .nav-link:hover {
                color: #0d6efd;
            }
        /* Hiệu ứng hover phát sáng cho sản phẩm trong danh mục */
        .dropdown-menu a {
            transition: all 0.3s ease;
            border-radius: 10px;
            padding: 10px 15px;
            display: inline-block;
        }

            .dropdown-menu a:hover {
                color: #0d6efd !important; /* đổi màu chữ xanh */
                transform: translateY(-5px); /* nổi lên nhẹ */
                box-shadow: 0 0 15px rgba(13, 110, 253, 0.7); /* phát sáng xanh */
                background: rgba(13, 110, 253, 0.05); /* nền nhạt */
            }

        .search-bar {
            flex: 1;
            max-width: 500px;
            margin: 0 20px;
        }

            .search-bar input {
                border-radius: 20px 0 0 20px;
                border-right: none;
            }

            .search-bar button {
                border-radius: 0 20px 20px 0;
            }

        .support-box {
            font-size: 0.9rem;
            margin-left: 15px;
            text-align: right;
        }

            .support-box i {
                color: #0d6efd;
            }

        footer {
            background: #212529;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top py-2">
        <div class="container-fluid px-4">
            <!-- Logo -->
            <a class="navbar-brand me-3" href="/">
                <img src="~/images/logo.png" alt="MDP Tech" style="height:60px;">
            </a>

            <!-- Toggle button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Menu trái -->
                <ul class="navbar-nav">
                    <li class="nav-item dropdown position-static">
                        <a class="nav-link dropdown-toggle" href="#" id="productDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-grid"></i> Danh Mục
                        </a>
                        <!-- Mega Menu -->
                        <div class="dropdown-menu w-100 shadow p-3 border-0" aria-labelledby="productDropdown">
                            <div class="d-flex justify-content-around text-center flex-wrap">
                                <a class="text-decoration-none text-dark px-3" asp-controller="MdpLaptops" asp-action="Index">
                                    <i class="bi bi-laptop fs-1 d-block mb-2"></i>Laptop
                                </a>
                                <a class="text-decoration-none text-dark px-3" asp-controller="MdpPhones" asp-action="Index">
                                    <i class="bi bi-phone fs-1 d-block mb-2"></i>Điện thoại
                                </a>
                                <a class="text-decoration-none text-dark px-3" asp-controller="MdpPCs" asp-action="Index">
                                    <i class="bi bi-pc-display fs-1 d-block mb-2"></i>PC
                                </a>
                                <a class="text-decoration-none text-dark px-3" asp-controller="MdpMonitors" asp-action="Index">
                                    <i class="bi bi-display fs-1 d-block mb-2"></i>Màn hình
                                </a>
                                <a class="text-decoration-none text-dark px-3" asp-controller="MdpComponents" asp-action="Index">
                                    <i class="bi bi-headphones fs-1 d-block mb-2"></i>Linh kiện
                                </a>
                                <a class="text-decoration-none text-dark px-3" asp-controller="MdpMouse" asp-action="Index">
                                    <i class="bi bi-mouse fs-1 d-block mb-2"></i>Chuột
                                </a>
                                <a class="text-decoration-none text-dark px-3" asp-controller="MdpCameras" asp-action="Index">
                                    <i class="bi bi-camera fs-1 d-block mb-2"></i>Máy ảnh
                                </a>
                            </div>
                        </div>


            </div>
            </li>
            </ul>

            <!-- Thanh tìm kiếm -->
            <form class="d-flex search-bar mx-auto" method="get" action="/Search">
                <input class="form-control" type="text" name="keyword" placeholder="Tìm sản phẩm..." />
                <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
            </form>

            <!-- Menu phải -->
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="/help"><i class="bi bi-question-circle"></i> Hỗ Trợ</a></li>
                <li class="nav-item"><a class="nav-link" href="/Cart"><i class="bi bi-cart3"></i> Giỏ hàng</a></li>

                @if (string.IsNullOrEmpty(username))
                {
                    <!-- Chưa login -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="MdpUsers" asp-action="MdpLogin">
                            <i class="bi bi-person-circle"></i> Đăng Nhập
                        </a>
                    </li>
                }
                else
                {
                    <!-- Đã login -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">

                            @username
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-controller="MdpUsers" asp-action="Index">Hồ sơ</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form method="post" asp-controller="MdpUsers" asp-action="MdpLogout">
                                    <button type="submit" class="dropdown-item">Đăng Xuất</button>
                                </form>

                            </li>
                    </li>

                }
            </ul>

            <!-- Box hỗ trợ -->
            <div class="support-box d-none d-lg-block ms-3">
                <div><i class="bi bi-telephone"></i> Hotline: <strong>0375526086</strong></div>
                <div><i class="bi bi-chat-dots"></i> Hỗ trợ 24/7</div>
            </div>
        </div>
        </div>
    </header>

    <!-- Main -->
    <main role="main" class="container my-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-white py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>MDP Technology</h5>
                    <p>Chuyên cung cấp laptop, PC, điện thoại và phụ kiện công nghệ chính hãng.</p>
                    <p>Công ty bán chạy nhất Việt Nam cùng Nhà Sáng Lập CEO AyaTsuki.</p>
                    <p>Thành Viên Quản Trị: Phạm Lê Mạnh, Phạm Đình Phùng.</p>
                </div>
                <div class="col-md-4">
                    <h5>Liên hệ</h5>
                    <p><i class="bi bi-envelope"></i> Support@mdptech.com</p>
                    <p><i class="bi bi-telephone"></i> 0375526086</p>
                    <p><i class="bi bi-geo-alt"></i> Số 60 Royal Hà Nội, Việt Nam</p>
                    <p><i class="bi bi-geo-alt"></i> Quận 10 Thành Phố Hồ Chí Minh, Việt Nam</p>
                    <p><i class="bi bi-geo-alt"></i> Số 32 đường lớn Đà Lạt, Việt Nam</p>
                </div>
                <div class="col-md-4">
                    <h5>Theo dõi</h5>
                    <a href="#" class="text-white me-3"><i class="bi bi-facebook fs-4"></i></a>
                    <a href="#" class="text-white me-3"><i class="bi bi-instagram fs-4"></i></a>
                    <a href="#" class="text-white me-3"><i class="bi bi-youtube fs-4"></i></a>
                    <a href="#" class="text-white"><i class="bi bi-tiktok fs-4"></i></a>
                </div>
            </div>
            <div class="text-center mt-4 border-top border-secondary pt-3">
                &copy; 2025 MDP Technology Company. Founder by AyaTsuki
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
