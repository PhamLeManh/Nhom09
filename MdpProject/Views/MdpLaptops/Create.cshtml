@model MdpProject.Models.MdpLaptop

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="MdpSanPhamId" class="control-label"></label>
        <select asp-for="MdpSanPhamId" class="form-control"
                asp-items="ViewBag.MdpSanPhamId"></select>
        <span asp-validation-for="MdpSanPhamId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MdpTenLaptop" class="control-label"></label>
        <input asp-for="MdpTenLaptop" class="form-control" />
        <span asp-validation-for="MdpTenLaptop" class="text-danger"></span>
    </div>

    <!-- Các field khác như CPU, RAM, Storage ... -->

    <button type="submit" class="btn btn-primary">Thêm mới</button>
</form>
